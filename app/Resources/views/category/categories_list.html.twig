{% extends "layout/base.html.twig" %}
{% block title %}Kategoriler{% endblock %}
{% set active = 'category' %}
{% block content %}
    {% for message in app.session.getFlashBag.get('success') %}
        <div class="alert alert-success text-center">
            <strong>{{ message }}</strong>
        </div>
    {% endfor %}
    <div class="row">
        <div class="col-md-12">
            <a href="{{ path('category_add') }}" class="btn btn-md btn-primary">Kategori Ekle</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <table class="table table-hover table-responsive">
                <thead>
                <tr>
                    <th>Kategori Adı</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                {% for category in categories %}
                    <tr>
                        <td>{{ category.name }}</td>
                        <td width="10%"><a href="{{ path('category_edit', {'id': category.id}) }}"><i class="glyphicon glyphicon-edit"></i> Düzenle</a></td>
                        <td width="5%"><a href="{{ path('category_delete', {'id': category.id}) }}" class="delete-btn_list"><i class="glyphicon glyphicon-trash"></i> Sil</a></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script type="text/javascript">
        $(document).ready(function(){
            $(".delete-btn_list").click(function(ev) {
                var $a = $(this);
                ev.preventDefault();
                var answer = confirm("Destek kategorisi silenecek!.\n Emin misiniz?");
                answer && makeRequest('POST', $a.attr('href'));
            });
        });
    </script>
{% endblock %}